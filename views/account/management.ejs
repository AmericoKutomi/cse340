<!-- Content Heading -->
<% if (title) { %>
<h1>
  <%= title %>
</h1>
<% } else { res.redirect('/') } %>

<!-- Message Block -->
<%- messages() %>

<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <%  }) %>
</ul>
<% } %>

<h2>Welcome <%= accountData.account_firstname%></h2>

<p><a title="Click to enter the Update Account Information" href="/account/update">Update Account Information</a> </p>
<br>

<% if(locals.accountData.account_type==='Employee' || locals.accountData.account_type==='Admin') { %>
<h3>Inventory Management</h3>
<p><a title="Click to enter the Inventory Management" href="/inv/">Enter the Inventory Management</a> </p>
<% } %>