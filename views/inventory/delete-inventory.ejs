<!-- Content Heading -->
<% if (title) { %>
<h1>
  <%= title %>
</h1>
<% } else { res.redirect('/') } %>

<!-- Message Block -->
<%- messages() %>

<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <%  }) %>
</ul>
<% } %>

<!-- delete vehicle confirmation form -->
<div class="delete-record">
  <p>Confirm deletion - The delete is permanent.</p>
  <form id="deleteForm" class="delete-form" action="/inv/deleteinventory" method="post">
    <fieldset>
      <legend>Delete Vehicle</legend>
      <label for="invmake">Make:</label>
      <input type="text" id="invmake" name="inv_make" required value="<%= locals.inv_make %>" readonly>
      <label for="invmodel">Model:</label>
      <input type="text" id="invmodel" name="inv_model" required value="<%= locals.inv_model %>" readonly>
      <label for="invyear">Year:</label>
      <input type="number" id="invyear" name="inv_year" required min="1886" value="<%= locals.inv_year %>" readonly>
      <label for="invprice">Price:</label>
      <input type="number" id="invprice" name="inv_price" min="1" required value="<%= locals.inv_price %>" readonly>
    </fieldset>
    <button type="submit">Delete Vehicle</button>
    <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>
  </form>
</div>