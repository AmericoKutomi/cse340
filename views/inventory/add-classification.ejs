<!-- Content Heading -->
<% if (title) { %>
<h1>
  <%= title %>
</h1>
<% } else { res.redirect('/') } %>

<!-- Message Block -->
<%- messages() %>

<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <%  }) %>
</ul>
<% } %>

<!-- add classification input form -->
<div class="add-record">
  <p>Field is required</p>
  <form class="add-form" action="/inv/addclassification" method="post">
    <fieldset>
      <legend>New Classification</legend>
      <label for="classificationname">Classification Name:</label>
      <span>Name must be alphabetic characters only, no spaces or special characters</span>
      <input type="text" id="classificationname" name="classification_name" required pattern="^[A-Za-z]+" value="<%= locals.classification_name %>">
    </fieldset>
    <button type="submit">Add Classification</button>
  </form>
</div>